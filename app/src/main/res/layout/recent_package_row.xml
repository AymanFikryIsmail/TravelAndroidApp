<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/white"
    android:layout_marginBottom="8dp"
    card_view:cardCornerRadius="8dp"
    android:elevation="8dp"
    tools:context=".view.activity.recent_packages.RecentActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


            <ImageView
                android:id="@+id/mask"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:scaleType="fitXY"
                android:src="@drawable/mask" />


        <LinearLayout
            android:id="@+id/package_data_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">
                    <TextView
                        android:id="@+id/travel_to"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Paris"
                        android:textColor="@color/black"
                        android:textSize="22sp"
                        android:drawableStart="@drawable/ic_index"
                        android:drawablePadding="10dp"
                        />
                    <TextView
                        android:id="@+id/date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textColor="@color/black"
                        android:text="23/7-2019 2019 2019 "
                        android:textSize="14sp"
                        android:drawableStart="@drawable/ic_calendar"
                        android:drawablePadding="10dp"
                        />

                    <ImageView
                        android:id="@+id/package_fav_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:paddingTop="8dp"
                        android:src="@drawable/ic_favorite" />
                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                >

                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:rating="5"
                    android:numStars="5"
                    android:stepSize="1"
                    style="@style/Base.Widget.AppCompat.RatingBar.Small"/>

                <TextView
                    android:id="@+id/price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:textSize="16sp"
                    android:text="9.000 LE"
                    android:textColor="@color/black"/>

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            >

            <TextView
                android:id="@+id/duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="3 Days"
                android:textSize="12.7sp"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textColor="#8a000000"
                android:lineSpacingExtra="7sp"
                />

            <TextView
                android:id="@+id/details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="end"
                android:gravity="end"
                android:textSize="12.7sp"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textColor="#8a000000"
                android:lineSpacingExtra="7sp"
                android:text="includes accommodation"
                android:layout_alignParentEnd="true"/>


        </LinearLayout>


            <TextView
                android:id="@+id/available_tickets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="end"
                android:layout_marginEnd="16dp"
                android:textSize="9.7sp"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textColor="#8a000000"
                android:lineSpacingExtra="7sp"
                android:text="Only 2 Person Available"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="5dp"/>

            </LinearLayout>
</android.support.v7.widget.CardView>