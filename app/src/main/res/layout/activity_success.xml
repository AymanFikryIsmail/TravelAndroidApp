<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="16dp"
    tools:context="com.travel.iti.travelapp.view.activity.SuccessActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/ic_myfavorite"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18.7sp"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textColor="#4a4a4a"
        android:lineSpacingExtra="4.3sp"
        android:gravity="center_horizontal"
        android:text="Congratulations.
your reservation is successful"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textColor="#7d6c76"
        android:lineSpacingExtra="3.3sp"
        android:gravity="center_horizontal"
        android:text="Package details will be in your Packages"
        />


    <Button
        android:id="@+id/btnExplore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/book_button"
        android:text="Explore"
        android:textSize="18sp"
        android:textColor="@color/textColorHint"
        />
</LinearLayout>
