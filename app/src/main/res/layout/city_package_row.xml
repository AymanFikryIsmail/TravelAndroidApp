<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="10dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/cityImageId"
        android:scaleType="fitXY"
        android:src="@drawable/mask" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dataLayoutId"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cityNameId"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_room"
                android:text="Dubai"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cityDescId"
                android:layout_marginStart="16dp"
                android:text="Dubai is one of the most beautiful places
Dubai is one of the most beautiful places"
                android:textColor="@color/white" />
        </LinearLayout>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/cityFavId"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/ic_favorite_border" />
    </LinearLayout>

</LinearLayout>

