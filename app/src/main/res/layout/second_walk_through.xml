<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/backgroundg_image">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/walkthrough_guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/walkthrough_guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35"/>

    <ImageView
        android:id="@+id/first_welcome_screen"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="centerInside"
        android:src="@drawable/second_welcome_screen_logo"
        app:layout_constraintTop_toBottomOf="@+id/walkthrough_guideline1"
        app:layout_constraintBottom_toTopOf="@+id/walkthrough_guideline2"

        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/first_welcome_screen_textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Journey Begins Here"
        android:textSize="20dp"
        android:textColor="@color/font_color"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/walkthrough_guideline2"
        app:layout_constraintVertical_bias="0.091" />

    <TextView
        android:id="@+id/first_welcome_screen_textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search and book in our largest data"
        android:textColor="@color/font_color"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/first_welcome_screen_textView1"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>