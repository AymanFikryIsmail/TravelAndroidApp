<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="SignUpViewModel"
            type="com.travel.iti.travelapp.viewmodel.SignUpViewModel" />

    </data>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context="com.travel.iti.travelapp.view.activity.SignUpActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="cursive"
                android:text="@string/app_name"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="50sp" />


            <EditText
                android:id="@+id/edit_text_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:drawableLeft="@drawable/ic_name"
                android:drawablePadding="5dp"
                android:hint="user name"
                android:inputType="text"
                android:text="@={SignUpViewModel.UserName}"
                android:nextFocusDown="@id/edit_text_email"
                android:padding="5dp"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/edit_text_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:drawableLeft="@drawable/ic_email"
                android:drawablePadding="5dp"
                android:hint="e-mail"
                android:text="@={SignUpViewModel.EmailAddress}"
                android:inputType="textEmailAddress"
                android:nextFocusDown="@id/edit_text_password"
                android:padding="5dp"
                android:textSize="20dp" />


            <EditText
                android:id="@+id/edit_text_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:drawableLeft="@drawable/ic_password"
                android:drawablePadding="5dp"
                android:hint="password"
                android:nextFocusDown="@id/edit_text_password2"
                android:inputType="textPassword"
                android:text="@={SignUpViewModel.Password}"
                android:padding="5dp"
                android:textSize="20dp" />
            <EditText
                android:id="@+id/edit_text_password2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:drawableLeft="@drawable/ic_password"
                android:drawablePadding="5dp"
                android:hint="re-enter password"
                android:inputType="textPassword"
                android:text="@={SignUpViewModel.Password}"
                android:padding="5dp"
                android:textSize="20dp" />

            <Button
                android:id="@+id/button_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Sign Up"
                android:onClick="@{(v) -> SignUpViewModel.onClick(v)}"
                android:textAllCaps="false" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

    </LinearLayout>

</ScrollView>
</layout>