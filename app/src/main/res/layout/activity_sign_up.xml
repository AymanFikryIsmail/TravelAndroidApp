<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="SignUpViewModel"
            type="com.travel.iti.travelapp.viewmodel.LoginViewModel" />

    </data>

<!--<ScrollView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:orientation="vertical">-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="cursive"
                android:text="@string/app_name"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="50sp" />


            <EditText
                android:id="@+id/edit_text_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:drawableLeft="@drawable/ic_name"
                android:drawablePadding="5dp"
                android:hint="user name"
                android:inputType="text"
                android:text="@={SignUpViewModel.UserName}"
                android:nextFocusDown="@id/edit_text_email"
                android:padding="5dp"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/edit_text_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:drawableLeft="@drawable/ic_email"
                android:drawablePadding="5dp"
                android:hint="e-mail"
                android:text="@={SignUpViewModel.EmailAddress}"
                android:inputType="textEmailAddress"
                android:nextFocusDown="@id/edit_text_password"
                android:padding="5dp"
                android:textSize="20dp" />


            <EditText
                android:id="@+id/edit_text_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:drawableLeft="@drawable/ic_password"
                android:drawablePadding="5dp"
                android:hint="password"
                android:nextFocusDown="@id/edit_text_phone"
                android:inputType="textPassword"
                android:text="@={SignUpViewModel.Password}"
                android:padding="5dp"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/edit_text_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:drawableLeft="@drawable/ic_phone"
                android:drawablePadding="5dp"
                android:hint="phone"
                android:inputType="phone"
                android:text="@={SignUpViewModel.phone}"
                android:padding="5dp"
                android:textSize="20dp" />


            <EditText
                android:id="@+id/edit_text_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:drawableLeft="@drawable/ic_home"
                android:drawablePadding="5dp"
                android:hint="city"
                android:inputType="text"
                android:text="@={SignUpViewModel.city}"
                android:padding="5dp"
                android:textSize="20dp" />

            <Button
                android:id="@+id/button_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Sign Up"
                android:onClick="@{(v) -> SignUpViewModel.signUpOnClick(v)}"
                android:textAllCaps="false" />

        </LinearLayout>

        <!--<include layout="@layout/progress_view"/>-->

    </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/progress_view"
            android:alpha="0.4"
            android:animateLayoutChanges="true"
            android:layout_centerInParent="true"
            android:background="#B0E6CECE"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone"
            >

            <ProgressBar
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:indeterminate="true"/>
        </FrameLayout>
    </RelativeLayout>

<!--</ScrollView>-->
</layout>